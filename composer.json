{
    "name": "provydon/laravel-pgsearch",
    "description": "PostgreSQL-friendly search for Eloquent (ILIKE + normalization; optional FTS/trigram later).",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Provydon\\PgSearch\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Provydon\\PgSearch\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-laravel": "^2.4",
        "phpunit/phpunit": "^10.0|^11.0",
        "laravel/pint": "^1.24"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Provydon\\PgSearch\\PgSearchServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "format": "vendor/bin/pint",
        "format-check": "vendor/bin/pint --test"
    }
}
